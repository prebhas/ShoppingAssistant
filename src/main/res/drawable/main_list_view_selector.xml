<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:drawable="@color/main_list_on_focus" /> <!-- focused -->
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/main_list_on_focus" /> <!-- focused and pressed-->
    <item android:state_pressed="true" android:drawable="@color/main_list_on_click" /> <!-- pressed -->
    <item android:drawable="@android:color/transparent" /> <!-- default -->
    <item android:state_enabled="false"
        android:drawable="@color/main_list_on_focus"/>
</selector> 